generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  PLAYER
  COACH
}

enum CourtType {
  CLAY
  HARD
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

enum FriendRequestStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String?
  email          String    @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  role           UserRole?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // auth
  accounts Account[]

  // chat
  messages      Message[]      @relation("Sent") // All messages this user has sent
  conversations Conversation[] // Conversations this user owns/started

  // tennis
  reservations Reservation[] // All reservations this user has made

  /**
   * All friendships where this user is stored in `userOneId`.
   * To get full friend list, combine friendshipsAsUserOne + friendshipsAsUserTwo.
   */
  friendshipsAsUserOne Friendship[] @relation("FriendshipUserOne")

  /**
   * All friendships where this user is stored in `userTwoId`.
   */
  friendshipsAsUserTwo Friendship[] @relation("FriendshipUserTwo")

  /**
   * All friend requests that this user has SENT to others.
   * (fromUserId = this user's id)
   */
  friendRequestsSent FriendRequest[] @relation("FriendRequestsSent")

  /**
   * All friend requests that this user has RECEIVED from others.
   * (toUserId = this user's id)
   */
  friendRequestsReceived FriendRequest[] @relation("FriendRequestsReceived")
}

model VerificationToken {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String
  token   String
  expires DateTime

  @@unique([email, token])
}

// ONLY used for OAuth providers
model Account {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId // foreign key to User

  type              String // oauth OR credentials
  provider          String // google, instagram, credentials, etc.
  providerAccountId String // ID from the provider (e.g. Google’s user id)

  refresh_token String? @db.String // Used to get a new access token when the old one expires
  access_token  String? @db.String // Used to call the provider’s API (e.g., Google Calendar, Gmail).
  expires_at    Int? // Unix timestamp when access_token expires.
  token_type    String? // "Bearer"
  scope         String? // Permissions granted by the user (e.g., "profile email").
  id_token      String? // A special JWT used by Google OAuth, Google always sends this on the first login.
  session_state String? // Internal provider tracking value (rarely used).

  user User @relation(fields: [userId], references: [id], onDelete: Cascade) // When a User is deleted, their Accounts are deleted too

  @@unique([provider, providerAccountId]) // Ensures we don’t store the same provider account twice
  @@index([userId]) // Index on userId for faster lookups
}

model Conversation {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime @default(now())
  lastMessageAt DateTime @default(now()) // sort conversations
  name          String? // for group chats
  isGroup       Boolean? @default(false)

  // who created this conversation
  ownerId String? @db.ObjectId
  owner   User?   @relation(fields: [ownerId], references: [id])

  messages Message[]
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  body      String?
  image     String?
  createdAt DateTime @default(now())

  // which conversation it belongs to
  conversationId String       @db.ObjectId
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  // who sent it
  senderId String @db.ObjectId
  sender   User   @relation("Sent", fields: [senderId], references: [id], onDelete: Cascade)
}

model Court {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  courtNo   Int?
  type      CourtType
  indoor    Boolean?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  reservations Reservation[]

  @@index([type])
  @@index([courtNo])
}

model Reservation {
  id        String            @id @default(auto()) @map("_id") @db.ObjectId
  userId    String            @db.ObjectId
  courtId   String            @db.ObjectId
  start     DateTime
  end       DateTime
  status    ReservationStatus @default(PENDING)
  note      String?
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  user  User  @relation(fields: [userId], references: [id])
  court Court @relation(fields: [courtId], references: [id])

  @@index([userId, start])
  @@index([courtId, start])
  @@index([start, end])
}

model FriendRequest {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  fromUserId String @db.ObjectId // user who SENDS the request
  toUserId   String @db.ObjectId // user who RECEIVES the request

  status      FriendRequestStatus @default(PENDING)
  createdAt   DateTime            @default(now())
  respondedAt DateTime? // when the request was accepted/rejected

  // Relations back to User:
  fromUser User @relation("FriendRequestsSent", fields: [fromUserId], references: [id])
  toUser   User @relation("FriendRequestsReceived", fields: [toUserId], references: [id])

  // Prevent duplicate requests from same sender to same receiver
  @@unique([fromUserId, toUserId])
  // Fast query for "all PENDING requests for this user"
  @@index([toUserId, status])
}

model Friendship {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userOneId String   @db.ObjectId // first user in the pair
  userTwoId String   @db.ObjectId // second user in the pair
  createdAt DateTime @default(now())

  // Relations back to User for each side of the friendship
  userOne User @relation("FriendshipUserOne", fields: [userOneId], references: [id])
  userTwo User @relation("FriendshipUserTwo", fields: [userTwoId], references: [id])

  // Ensure only one friendship per pair of users (A-B is unique).
  @@unique([userOneId, userTwoId])
  // Optional indexes for faster lookups "who are this user's friends?"
  @@index([userOneId])
  @@index([userTwoId])
}
